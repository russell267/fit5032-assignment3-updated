{
  "firestore": {
    "database": "(default)",
    "location": "australia-southeast2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/countBooks", "function": "countBooks", "functionRegion": "us-central1" },
      { "source": "/sendEmail",  "function": "sendEmail",  "functionRegion": "us-central1" },
      { "source": "/seedBooks",  "function": "seedBooks",  "functionRegion": "us-central1" },
      { "source": "/seedUsers",  "function": "seedUsers",  "functionRegion": "us-central1" },
      { "source": "/api/**",     "function": "api",        "functionRegion": "us-central1" },

      { "source": "/map/**",     "function": "map",     "functionRegion": "us-central1" },

      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**",
        "headers": [
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
          { "key": "Permissions-Policy", "value": "geolocation=(self), microphone=(), camera=()" }
        ]
      },
      {
        "source": "**",
        "headers": [
          { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
        ]
      }
    ]
  },
  "emulators": {
    "functions": { "host": "127.0.0.1", "port": 5007 },
    "firestore": { "port": 8080 },
    "hosting":   { "host": "127.0.0.1", "port": 5025 },
    "ui":        { "enabled": true, "host": "127.0.0.1", "port": 4025 }
  }
}
